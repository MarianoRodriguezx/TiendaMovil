<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaMovil.Views.BrandsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="shopping.png" Clicked="ToolbarItem_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ActivityIndicator x:Name="activityIndicator" IsRunning="False" IsVisible="False" Color="Black" 
    Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />

            <ScrollView>
                <StackLayout x:Name="stackLayout">
                </StackLayout>
            </ScrollView>

        </Grid>
    </ContentPage.Content>
</ContentPage>